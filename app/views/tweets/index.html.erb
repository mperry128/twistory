<div class="page-header">
  <h1>
    Tweets
    <a href="/tweets/new" class="btn btn-lg btn-success">New Tweet</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @tweets.each do |tweet| %>
      <tr>
        <td>
          <a href="/tweets/<%= tweet.id %>" class="btn btn-primary">Show</a>
          <a href="/tweets/<%= tweet.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tweet/<%= tweet.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
